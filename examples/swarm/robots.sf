asynchronous = {move}
agentEnvironment = {press}
globalSynchronous = {}

agent module M1
    location : [0..3] init 0;

    [move] (location<2) -> 1.0:(location'=location+1);
    [press] (location=2) -> 1.0:(location'=location+1);
endmodule

environment module M2
    pressed : bool init false;

    [press] (!pressed) -> 0.5:(pressed'=true) + 0.5:(pressed'=pressed);
endmodule

label "pressed" = (pressed_E);