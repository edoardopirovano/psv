agent
	state : [0..3] init 0;

	[a] (state=0);
	[x] (state=1);
	[y] (state=2);
	[z] (state=3);

	[null] true;
	
	update
		(a, true, {}) -> 0.5:(state'=1) + 0.5:(state'=2);
		(y, true, !{x}) -> 1.0:(state'=3);
	endupdate
endagent

environment
	state : [4..5] init 4;

	[k] true;

	[null] true;
	
	update
		(k, state=4, {z}) -> 1.0:(state'=5);
	endupdate
endenvironment

label "done" = state_env=5;
